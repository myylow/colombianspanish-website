{
  "functions": {
    "predeploy": ["npm --prefix $RESOURCE_DIR run lint", "npm --prefix $RESOURCE_DIR run build"],
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "trailingSlash": false,
    "cleanUrls": true,
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/mypurchases/*/colombian-spanish-ebook-kindle",
        "function": "downloadKindle"
      },
      {
        "source": "/mypurchases/*/colombian-spanish-ebook-epub",
        "function": "downloadEpub"
      },
      {
        "source": "/mypurchases/*/colombian-spanish-ebook-pdf",
        "function": "downloadPdf"
      },
      {
        "source": "/mypurchases/*/colombian-spanish-flashcards",
        "function": "downloadFlashcards"
      }
    ],
    "redirects": [
      {
        "source": "/ebook",
        "destination": "/course",
        "type": 301
      },
      {
        "source": "/videocourse",
        "destination": "https://course.colombianspanish.co/p/conversational-spanish-for-colombia",
        "type": 301
      },
      {
        "source": "/studykit",
        "destination": "https://gum.co/colombianspanishstudykit",
        "type": 301
      },
      {
        "source": "/tag/where-to-study",
        "destination": "/where-to-study",
        "type": 301
      },
      {
        "source": "/tag/what-to-study",
        "destination": "/what-to-study",
        "type": 301
      },
      {
        "source": "/tag/how-to-study",
        "destination": "/how-to-study",
        "type": 301
      }
    ]
  }
}
